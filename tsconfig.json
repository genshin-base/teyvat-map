{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"allowSyntheticDefaultImports": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"#lib/*": ["./lib/*"]
		}
	},
	"exclude": ["node_modules"]
}
